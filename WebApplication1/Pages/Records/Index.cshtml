@page
@model WebApplication1.Pages.Records.IndexModel
@{
    ViewData["Title"] = "Records";
}

<h1>Records</h1>

<!-- Sticky, collapsible search card -->
<div class="sticky-top" style="top:56px; z-index:1020;">
  <div class="card mb-3 shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
      <div class="fw-bold">查詢</div>
      <div>
        <button class="btn btn-sm btn-outline-secondary me-2" type="button" data-bs-toggle="collapse" data-bs-target="#searchCollapse" aria-expanded="true" aria-controls="searchCollapse">收合/展開</button>
        <a class="btn btn-sm btn-secondary" href="/Records">清除</a>
      </div>
    <div id="searchCollapse" class="collapse show">
      <div class="card-body">
        <form method="get" class="row g-3 mb-0">
          <div class="col-md-2">
            <label class="form-label">公司代號</label>
            <input class="form-control" name="公司代號" value="@Model.公司代號" />
          </div>
          <div class="col-md-3">
            <label class="form-label">公司名稱</label>
            <input class="form-control" name="公司名稱" value="@Model.公司名稱" />
          </div>
          <div class="col-md-3">
            <label class="form-label">產業別</label>
            <input class="form-control" name="產業別" value="@Model.產業別" />
          </div>
          <div class="col-md-2">
            <label class="form-label">資料年月</label>
            <input class="form-control" name="資料年月" value="@Model.資料年月" placeholder="例如 114/10" />
          </div>
          <div class="col-md-2 align-self-end">
            <button class="btn btn-primary" type="submit">查詢</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="mb-3">顯示從資料庫 dbo.Records 擷取的前 500 筆資料。</div>

<div class="row">
  <div class="col-12 col-lg-6 mb-3">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title">查詢當月營收前 N 名公司</h5>
        <form method="get" class="row g-2" id="topNForm">
          <div class="col-6">
            <label class="form-label">Top N (輸入數字或使用快捷鍵)</label>
            <input id="TopNInput" class="form-control" name="TopN" value="@Model.TopN" />
          </div>
          <div class="col-6 align-self-end">
            <div class="btn-group" role="group" aria-label="TopN shortcuts">
              <button class="btn btn-outline-secondary" type="button" onclick="document.getElementById('TopNInput').value='5'; document.getElementById('topNForm').submit();">Top 5</button>
              <button class="btn btn-outline-secondary" type="button" onclick="document.getElementById('TopNInput').value='10'; document.getElementById('topNForm').submit();">Top 10</button>
              <button class="btn btn-outline-secondary" type="button" onclick="document.getElementById('TopNInput').value='20'; document.getElementById('topNForm').submit();">Top 20</button>
            </div>
            <button class="btn btn-primary ms-2" type="submit">查詢TopN</button>
          </div>
        </form>
        <hr />
        <div>
          <strong>注意：</strong> 若有 TopN，結果將只顯示依當月營收排序的前 N 名。
        </div>
      </div>
    </div>
  </div>

  <div class="col-12 col-lg-6">
    <div class="table-responsive">
      <table class="table table-striped table-sm table-bordered table-hover">
        <thead>
          <tr>
            <th>Id</th>
            <th>公司代號</th>
            <th>公司名稱</th>
            <th>產業別</th>
            <th>資料年月</th>
            <th>當月營收</th>
            <th>去年同月</th>
            <th>累計當月</th>
            <th>備註</th>
          </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Items)
        {
          <tr>
            <td>@item.Id</td>
            <td>@item.公司代號</td>
            <td>@item.公司名稱</td>
            <td>@item.產業別</td>
            <td>@item.資料年月</td>
            <td>@item.營業收入_當月營收</td>
            <td>@item.營業收入_去年當月營收</td>
            <td>@item.累計營業收入_當月累計營收</td>
            <td>@item.備註</td>
          </tr>
        }
        </tbody>
      </table>
    </div>
  </div>
</div>
